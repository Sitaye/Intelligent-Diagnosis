/* 登录之前的样式 */
.beforeLogin {
  height: 1000rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.beforeLogin .defaultAvatar {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30px;
}
.beforeLogin .logbutton {
  color: white;
  background-color: #00B386;
  width: 350rpx;
  height: 100rpx;
  line-height: 70rpx;
  border-radius: 30px;
}
/* 登录之后的样式 */
.afterLogin .header{
  margin-top: 20px;
  height: 120px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.afterLogin .header .username {
  font-size: 24px;
  font-weight: bold;
}
.afterLogin .header .education{
  font-size: 12px;
  margin-bottom: 15px;
}
.afterLogin .header image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 10px;
  margin-right: 15px;
}
.afterLogin .userinfo .panel{
  margin: 0 auto;
  width: 280px;
  display: flex;
  justify-content: space-between;
  padding: 10px 30px 10px 30px;
  border: 1px solid #3f3f3f83;
  border-radius: 10px;
}
.afterLogin .userinfo .panel .panel-item{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.afterLogin .userinfo .panel .panel-item .number{
  font-size: 20px;
  margin-bottom: 5px;
}
.afterLogin .userinfo .settings {
  /* background-color: sienna; */
  margin: 15px auto;
  padding: 12px;
  width: 315px;
  border: 1px solid #3f3f3f83;
  border-radius: 10px;
}
.afterLogin .userinfo .settings .setting-item{
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  position: relative;
}
.afterLogin .userinfo .settings .setting-item image{
  justify-content: left;
  width: 25px;
  height: 25px;
  margin-right: 10px;
  /* background-color: pink; */
}
.afterLogin .userinfo .settings .setting-item navigator{
  width: 20px;
  position: absolute;
  right: 0;
}